<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/clickable_layout"
    android:clickable="true"
    android:filterTouchesWhenObscured="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tx_from_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/transaction_item_margin"
        android:layout_marginTop="@dimen/transaction_item_margin"
        android:filterTouchesWhenObscured="true"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/gray"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tx_from_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/transaction_item_margin"
        android:layout_marginStart="@dimen/transaction_item_margin"
        android:filterTouchesWhenObscured="true"
        android:text="@string/spent_address"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/gray"
        android:textSize="10sp" />

</LinearLayout>