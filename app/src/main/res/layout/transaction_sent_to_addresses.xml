<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/clickable_layout"
    android:clickable="true"
    android:filterTouchesWhenObscured="true">

    <TextView
        android:id="@+id/tx_to_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/transaction_item_margin"
        android:layout_marginTop="@dimen/transaction_item_margin"
        android:filterTouchesWhenObscured="true"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/gray"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tx_to_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tx_to_text"
        android:layout_marginBottom="@dimen/transaction_item_margin"
        android:layout_marginStart="@dimen/transaction_item_margin"
        android:filterTouchesWhenObscured="true"
        android:text="@string/wallet_address"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/gray"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tx_to_amount_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tx_to_text"
        android:layout_marginEnd="@dimen/transaction_item_margin"
        android:layout_marginStart="@dimen/transaction_item_margin"
        android:filterTouchesWhenObscured="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/red_text"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tx_to_exchange_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tx_to_text"
        android:layout_marginStart="@dimen/transaction_item_margin"
        android:layout_toStartOf="@id/tx_to_amount_text"
        android:filterTouchesWhenObscured="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/red_text"
        android:textSize="12sp" />

</RelativeLayout>