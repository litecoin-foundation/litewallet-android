<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/recover_wallet_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="@string/recovery_phrase"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/recover_wallet_edit_text"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/recover_wallet_text1"
        android:layout_margin="16dp"
        android:layout_marginTop="20dp"
        android:background="@color/white_trans"
        android:gravity="top"
        android:imeOptions="actionDone"
        android:inputType="textMultiLine"
        android:lines="5"
        android:hint="@string/recovery_phrase"
        android:textColorHint="@color/wallet_orange"
        android:padding="20dp"
        android:scrollHorizontally="false"
        android:textColor="@color/wallet_orange"
        android:textSize="22sp" />

    <Button
        android:id="@+id/recover_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:padding="20dp"
        android:text="@string/recover_button"
        android:textAllCaps="false"
        android:textColor="@color/white" />

</RelativeLayout>