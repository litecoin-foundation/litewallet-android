<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroundmain_cropped"
    tools:context="com.breadwallet.presenter.activities.RequestQRActivity">

    <Button
        android:id="@+id/request_close"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/x" />

    <TextView
        android:layout_marginTop="60dp"
        android:id="@+id/request_amount_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/request_image_qr_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/request_address_layout"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:padding="15dp"
            android:id="@+id/request_address_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="16sp" />
    </RelativeLayout>


</LinearLayout>
