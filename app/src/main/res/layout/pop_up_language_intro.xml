<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/dialog_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/barlowsemicondensed_semibold"
        android:textSize="20sp"
        android:paddingTop="20dp"
        android:textColor="@color/black"
        android:paddingEnd="60dp"
        android:paddingStart="60dp"
        android:textAlignment="center"
        android:paddingBottom="20dp"
        android:text="Are you sure you want to change the language to English?" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_shadow"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_yes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/litecoin_litewallet_blue"
            android:fontFamily="@font/barlowsemicondensed_regular"
            android:background="@drawable/button_intro_left"
            android:clickable="true"
            android:text="Yes" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gray_shadow"
            />
        <Button
            android:id="@+id/button_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/barlowsemicondensed_regular"
            android:textColor="@color/red"
            android:clickable="true"
            android:background="@drawable/button_intro_right"
            android:text="Cancel" />
    </LinearLayout>
</LinearLayout>