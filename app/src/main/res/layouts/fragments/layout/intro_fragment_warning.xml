<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_trans">

    <TextView
        android:id="@+id/intro_warning_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="WARNING"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="35sp" />

    <ImageView
        android:id="@+id/intro_warning_no_eye"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/intro_warning_text1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:src="@drawable/no_eye" />

    <TextView
        android:id="@+id/intro_warning_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/intro_warning_no_eye"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:padding="20dp"
        android:text="DO NOT let anyone see your recovery phrase or they can spend your bitcoins."
        android:textColor="@color/white"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/intro_warning_no_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/intro_warning_text2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:src="@drawable/no_key" />

    <TextView
        android:id="@+id/intro_warning_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/intro_warning_no_key"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:padding="20dp"
        android:text="NEVER type your recovery phrase into password managers or elsewhere. Other devices may be infected."
        android:textColor="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/intro_warning_show_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:text="show"
        android:textColor="@color/white" />

</RelativeLayout>