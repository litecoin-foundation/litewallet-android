<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="90dp">

    <RelativeLayout
        android:id="@+id/settings_all"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/transactions"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/clickable_layout"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="no Transactions"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/light_grey" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/importprivatekey"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/transactions"
            android:layout_marginTop="40dp"
            android:background="@drawable/clickable_layout"
            android:clickable="true">

            <ImageView
                android:id="@+id/cameraguide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:background="@drawable/cameraguidebluesmall" />

            <TextView
                android:id="@+id/textimportprivatekey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toEndOf="@+id/cameraguide"
                android:text="import private key"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/dark_blue" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rescanblockchain"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/importprivatekey"
            android:background="@drawable/clickable_layout"
            android:clickable="true">


            <ImageView
                android:id="@+id/rescanimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:background="@drawable/rescan" />

            <TextView
                android:id="@+id/textrescanblockchain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toEndOf="@+id/rescanimage"
                android:text="rescan blockchain"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/dark_blue" />
        </RelativeLayout>

        <TextView
            android:id="@+id/rescaninstructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rescanblockchain"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:text="@string/settingsall_rescan_instructions"
            android:textColor="@color/grey"
            android:textSize="18sp" />

        <RelativeLayout
            android:id="@+id/settings"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/rescaninstructions"
            android:layout_marginTop="30dp"
            android:background="@drawable/clickable_layout"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="settings"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/grey"
                android:textSize="28sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/chevron" />

        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
