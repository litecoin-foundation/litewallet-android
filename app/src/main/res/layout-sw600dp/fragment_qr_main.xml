<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_fragment_qr"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/qr_page_layout"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/main_text_receive_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="@string/receive_money"
            android:textSize="@dimen/text_size" />

        <ImageView
            android:id="@+id/main_image_qr_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_text_receive_money"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp" />


        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/theAddressLayout"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/main_image_qr_code"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/main_address_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textColor="@color/dark_blue"
                android:padding="15dp"
                android:textSize="14sp" />
        </RelativeLayout>
    </RelativeLayout>

    <com.breadwallet.presenter.customviews.BubbleTextVew
        android:id="@+id/qr_bubble1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/bubble_up"
        android:gravity="center"
        android:text="@string/toast_qr_tip"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:visibility="gone" />

    <com.breadwallet.presenter.customviews.BubbleTextVew
        android:id="@+id/qr_bubble2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="300dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/bubble_up"
        android:gravity="center"
        android:text="@string/toast_address_tip"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:visibility="gone" />

</RelativeLayout>