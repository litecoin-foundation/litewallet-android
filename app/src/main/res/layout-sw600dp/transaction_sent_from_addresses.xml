<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/tx_from_layout"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_below="@+id/tx_from_label"
android:background="@drawable/clickable_layout"
android:clickable="true">

<TextView
    android:id="@+id/tx_from_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/transaction_item_margin"
    android:layout_marginTop="@dimen/transaction_item_margin"
    android:singleLine="true"
    android:text="--------------------------"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:textColor="@color/grey"
    android:textSize="13sp" />

<TextView
    android:id="@+id/tx_from_description"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/tx_from_text"
    android:layout_marginBottom="@dimen/transaction_item_margin"
    android:layout_marginLeft="@dimen/transaction_item_margin"
    android:text="spent address"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:textColor="@color/grey"
    android:textSize="13sp" />

</RelativeLayout>