<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="90dp">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/settings"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/settings_line_1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/separator_height"
                    android:layout_marginTop="30dp"
                    android:background="@color/grey" />

                <RelativeLayout
                    android:id="@+id/about"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/settings_line_1"
                    android:background="@drawable/clickable_layout"
                    android:clickable="true">

                    <TextView
                        android:id="@+id/about_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:text="about"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/grey" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/chevron" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/settings_line_2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/separator_height"
                    android:layout_below="@id/about"
                    android:layout_marginLeft="20dp"
                    android:background="@color/grey" />

                <RelativeLayout
                    android:id="@+id/recovery_phrase"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/settings_line_2"
                    android:background="@drawable/clickable_layout"
                    android:clickable="true">


                    <TextView
                        android:id="@+id/recovery_phrase_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:text="recovery phrase"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/grey" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/chevron" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/settings_line_3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/separator_height"
                    android:layout_below="@id/recovery_phrase"
                    android:background="@color/grey" />

                <RelativeLayout
                    android:id="@+id/settings_line_4"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/separator_height"
                    android:layout_below="@id/settings_line_3"
                    android:layout_marginTop="30dp"
                    android:background="@color/grey" />

                <RelativeLayout
                    android:id="@+id/local_currency"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/settings_line_4"
                    android:background="@drawable/clickable_layout"
                    android:clickable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:text="local currency"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/grey" />

                    <TextView
                        android:id="@+id/three_letters_currency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="50dp"
                        android:text=""
                        android:textColor="@color/dark_blue"
                        android:textSize="20sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/chevron" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/settings_line_5"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/separator_height"
                    android:layout_below="@id/local_currency"
                    android:background="@color/grey" />


                <RelativeLayout
                    android:id="@+id/settings_line_6"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/separator_height"
                    android:layout_below="@id/settings_line_5"
                    android:layout_marginTop="30dp"
                    android:background="@color/grey" />

                <RelativeLayout
                    android:id="@+id/change_password"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/settings_line_6"
                    android:background="@drawable/clickable_layout"
                    android:clickable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:text="change passcode"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/dark_blue" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/settings_line_7"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/separator_height"
                    android:layout_below="@id/change_password"
                    android:layout_marginLeft="20dp"
                    android:background="@color/grey" />

                <RelativeLayout
                    android:id="@+id/start_recovery_wallet"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/settings_line_7"
                    android:background="@drawable/clickable_layout"
                    android:clickable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:text="start/recovery another wallet"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/red" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/settings_line_8"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/separator_height"
                    android:layout_below="@id/start_recovery_wallet"
                    android:background="@color/grey" />
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>